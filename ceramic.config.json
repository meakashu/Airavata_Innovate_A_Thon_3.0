{
  "ceramic": {
    "network": "testnet-clay",
    "anchor": {
      "pollingInterval": 60000,
      "maxPollingTime": 120000
    },
    "ipfs": {
      "mode": "remote",
      "host": "https://ipfs-clay.3boxlabs.com"
    },
    "stateStore": {
      "mode": "fs",
      "localDirectory": "./ceramic-data"
    },
    "indexing": {
